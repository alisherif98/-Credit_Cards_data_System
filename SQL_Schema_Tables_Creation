-- Create the target schema TGT_DWH
CREATE USER TGT_DWH IDENTIFIED BY 123;
GRANT CONNECT, RESOURCE TO TGT_DWH;

-- Create the CREDIT_CARDS_ARCHIVE table
CREATE TABLE TGT_DWH.CREDIT_CARDS_ARCHIVE (
    CC_SUR            NUMBER PRIMARY KEY,
    CC_NUMBER         VARCHAR2(19) NOT NULL,
    CC_NUMBER_MASKED  VARCHAR2(19),
    CC_BAL            NUMBER(15,2),
    CC_LIMIT          NUMBER(15,2),
    CC_OPEN_DATE      DATE,
    ACCT_OPEN_DATE    DATE,
    EMP_NAME          VARCHAR2(100),
    EMP_EMAIL         VARCHAR2(100),
    EMP_DEPT_NAME     VARCHAR2(100)
);

-- Create the CREDIT_CARDS_CURRENT table
CREATE TABLE TGT_DWH.CREDIT_CARDS_CURRENT (
    CC_SUR            NUMBER PRIMARY KEY,
    CC_NUMBER         VARCHAR2(19) NOT NULL,
    CC_NUMBER_MASKED  VARCHAR2(19),
    CC_BAL            NUMBER(15,2),
    CC_LIMIT          NUMBER(15,2),
    CC_OPEN_DATE      DATE,
    ACCT_OPEN_DATE    DATE,
    EMP_NAME          VARCHAR2(100),
    EMP_EMAIL         VARCHAR2(100),
    EMP_DEPT_NAME     VARCHAR2(100)
);

